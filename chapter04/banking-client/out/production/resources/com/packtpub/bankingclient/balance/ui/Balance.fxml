<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="20"
      fx:controller="com.packtpub.bankingclient.balance.ui.BalanceController">

    <GridPane hgap="10" vgap="10">


        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <VBox spacing="15">
            <Button text="Query" onAction="#queryBalance" styleClass="btn-primary"/>
            <Text fx:id="balance" style="-fx-font-weight: bold;"
                  GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <font>
                    <Font name="Cambria" size="20"/>
                </font>
            </Text>
        </VBox>


    </GridPane>

</VBox>